<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
        <item name="layout_scrollFlags">exitUntilCollapsed</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="titleTextColor"> @color/black</item>
    </style>
    <style name="Theme.Weather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textAddress">
        <item name="android:textColor"> #1A1D26</item>
        <item name="fontFamily"> @font/poppins_bold</item>
    </style>

</resources>